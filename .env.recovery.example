RECOVERY_ENV=1

# Required
DATABASE_URL_RECOVERY=postgres://user:pass@host:5432/dbname
SUPABASE_PROJECT_REF_RECOVERY=your-recovery-project-ref

# Optional guards (comma-separated refs)
RECOVERY_ALLOWED_PROJECT_REFS=your-recovery-project-ref
RECOVERY_DENY_PROJECT_REFS=prod,production

# Supabase CLI (optional, recovery-only)
SUPABASE_DB_PASSWORD_RECOVERY=your-db-password
SUPABASE_ACCESS_TOKEN_RECOVERY=your-access-token
SUPABASE_URL_RECOVERY=https://project-ref.supabase.co
SUPABASE_SECRET_KEY_RECOVERY=your-service-role-key

# Storage (as needed)
STORAGE_BUCKET_RECOVERY=recovery-bucket
STORAGE_ENDPOINT_RECOVERY=https://storage.supabase.co
STORAGE_ACCESS_KEY_ID_RECOVERY=your-storage-key-id
STORAGE_SECRET_ACCESS_KEY_RECOVERY=your-storage-secret
STORAGE_PREFIX_RECOVERY=

# Optional: set a stable run id for logs; otherwise generated
# RECOVERY_RUN_ID=recovery-run-yyyymmddhhmm
